{
  // https://www.typescriptlang.org/tsconfig/
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "NodeNext",
    "newLine": "lf",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "include": ["${configDir}/src"] // `${configDir}` supported since v5.5.0
}
